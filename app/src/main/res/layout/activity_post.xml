<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_height="?actionBarSize"
        android:background="@drawable/gradientbackground"
        android:titleTextColor="@color/grey">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:id="@+id/backArrow"
                android:tint="@color/lightGrey"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/ic_backarrow"
                android:layout_alignParentStart="true"

                android:layout_height="match_parent">
            </androidx.appcompat.widget.AppCompatImageView>

            <Button
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/buttonstyle"
                android:layout_toLeftOf="@+id/shareanonymous"
                android:layout_marginEnd="10dp"
                android:textSize="12sp"
                android:text="Post"
                android:textColor="@color/blue" />
            <Button
                android:id="@+id/shareanonymous"
                android:layout_width="wrap_content"
                android:textColor="@color/blue"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                android:background="@drawable/buttonstyle"
                android:text="Post Anonymously"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:gravity="center_vertical"
        android:id="@+id/bottombar"
        android:layout_alignParentBottom="true"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="60dp"
            android:layout_marginStart="15dp"
            android:id="@+id/gallery"
            app:srcCompat="@drawable/ic_image_black_24dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="5dp"
            android:layout_height="60dp">
        </androidx.appcompat.widget.AppCompatImageView>
        <ProgressBar
            android:layout_width="50dp"
            android:layout_marginLeft="5dp"
            style="?android:attr/progressBarStyleHorizontal"

            android:background="@drawable/drawable_circle_dark_blue"
            android:progressDrawable="@drawable/drawable_circle_yellow"

            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"
            android:indeterminate="false"
            android:id="@+id/editTextPrgBar"
            android:max="120"
            android:progress="100"
            android:rotation="-90"
            android:layout_marginEnd="15dp"
            android:layout_height="50dp">
        </ProgressBar>
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottombar"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:layout_gravity="top"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/alphanotext"
                        android:layout_height="400dp">

                    </de.hdodenhof.circleimageview.CircleImageView>


                </LinearLayout>


                <EditText
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:gravity="start"
                    android:maxLength="120"
                    android:id="@+id/postcontent"
                    android:layout_weight="80"
                    android:layout_height="match_parent"
                    android:background="@drawable/editbox">


                </EditText>


            </LinearLayout>
            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:textColor="@color/blue"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:background="@drawable/buttonstyle"
                android:text="Clear Images"
                android:layout_height="wrap_content" />
            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/viewpager"
                android:layout_gravity="right">


            </androidx.viewpager.widget.ViewPager>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>